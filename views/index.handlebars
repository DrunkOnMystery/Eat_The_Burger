<div class="container">
  <h1>Burgers</h1>

  <h6>Burgers ready to be eaten</h6>


  <div class="row">
    <div class="col">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}

        {{this.burger_name}}
        <li>
          <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
            {{#if devoured}}YUM{{else}}EAT THE BURGER!{{/if}}
          </button>

          <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>


  <h6>Burgers that have been devoured already:</h6>

  <div class="col">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{this.burger_name}}
      <li>

        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <h2>Add a new burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger type:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add a new Burger!</button>
  </form>
</div>