<h1>Burgers</h1>

<h2>Burgers ready to be eaten</h2>
<div>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> burgers/burgers-block devoured=true}} --}}
      {{this.burger_name}}
          <li>
	<button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
		{{#if devoured}}EAT UP!{{else}}YUM!!!{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/unless}}
    

  {{/each}}
</ul>
</div>

<h2>Burgers that have been devoured already:</h2>
<div>
<ul>
  {{#each burgers}}
    {{#if devoured}}
              {{this.burger_name}}
    <li>
	<button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
		{{#if devoured}}EAT UP!{{else}}YUM!!!{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/if}}
  {{/each}}
</ul>
</div>
<h2>Add a new burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Has this burger been devoured yet?</label><br>
  </div>

  <button type="submit">Add a new Burger!</button>
</form>